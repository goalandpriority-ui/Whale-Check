'use client'

import { useState } from "react"

export default function WalletAnalyzer() {
  const [address, setAddress] = useState("")
  const [loading, setLoading] = useState(false)
  const [totalTransfers, setTotalTransfers] = useState<number | null>(null)
  const [error, setError] = useState("")

  const analyzeWallet = async () => {
    if (!address) return setError("Please enter a wallet address")
    setError("")
    setLoading(true)
    setTotalTransfers(null)

    try {
      const res = await fetch(`/api/analyze`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ address })
      })
      const data = await res.json()
      if (res.ok) {
        setTotalTransfers(data.totalTransfers)
      } else {
        setError(data.error || "Something went wrong")
      }
    } catch (err) {
      setError("Failed to fetch data")
    } finally {
      setLoading(false)
    }
  }

  return (
    <div style={{ textAlign: "center", marginTop: "50px" }}>
      <input
        type="text"
        value={address}
        placeholder="Enter wallet address"
        onChange={(e) => setAddress(e.target.value)}
        style={{ padding: "8px", width: "300px" }}
      />
      <button
        onClick={analyzeWallet}
        style={{ padding: "8px 16px", marginLeft: "10px" }}
        disabled={loading}
      >
        {loading ? "Analyzing..." : "Analyze Wallet"}
      </button>

      {error && <p style={{ color: "red", marginTop: "20px" }}>{error}</p>}
      {totalTransfers !== null && (
        <p style={{ marginTop: "20px" }}>
          Total ERC20 Transfers: {totalTransfers}
        </p>
      )}
    </div>
  )
}
