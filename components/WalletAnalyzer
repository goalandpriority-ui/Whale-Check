'use client'

import { useState } from 'react'

export default function WalletAnalyzer() {
  const [wallet, setWallet] = useState('')
  const [loading, setLoading] = useState(false)
  const [result, setResult] = useState<number | null>(null)
  const [error, setError] = useState<string | null>(null)

  const handleAnalyze = async () => {
    setLoading(true)
    setResult(null)
    setError(null)

    try {
      const res = await fetch('/api/analyze', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ address: wallet }),
      })

      const data = await res.json()

      if (!res.ok) {
        setError(data.error || 'Something went wrong')
      } else {
        setResult(data.totalTransfers)
      }
    } catch (err: any) {
      setError(err.message || 'Network error')
    } finally {
      setLoading(false)
    }
  }

  return (
    <div className="max-w-md mx-auto mt-10 p-4 bg-black text-white rounded-lg">
      <h1 className="text-2xl font-bold mb-4">üêã Base Whale Checker</h1>
      <input
        type="text"
        placeholder="Enter wallet address"
        className="w-full p-2 mb-4 rounded text-black"
        value={wallet}
        onChange={(e) => setWallet(e.target.value)}
      />
      <button
        className="w-full p-2 bg-blue-600 rounded font-bold hover:bg-blue-700"
        onClick={handleAnalyze}
        disabled={loading || !wallet}
      >
        {loading ? 'Analyzing...' : 'Analyze Wallet'}
      </button>

      {result !== null && (
        <div className="mt-4 p-2 bg-gray-800 rounded">
          <p>Total ERC20 Transactions: {result}</p>
          {/* Later we can add Total Volume + Category */}
        </div>
      )}

      {error && <p className="mt-4 text-red-500">{error}</p>}
    </div>
  )
}
