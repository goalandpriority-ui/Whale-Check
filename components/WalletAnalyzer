// components/WalletAnalyzer.tsx
'use client'

import React, { useState } from 'react'
import { useAccount, useBalance, useConnect } from 'wagmi'
import { wagmiConfig } from '../lib/wagmi'
import { WalletConnectConnector } from '@wagmi/connectors/walletConnect'

export default function WalletAnalyzer() {
  const { connect } = useConnect({
    connector: new WalletConnectConnector({
      chains: [wagmiConfig.chains[0]],
      options: { projectId: 'c56357101a152bXXXXXX' },
    }),
  })

  const { address, isConnected } = useAccount()
  const { data: balance } = useBalance({ address })

  return (
    <div className="p-6 bg-gray-900 text-white rounded-lg w-96">
      <h2 className="text-xl font-bold mb-4">üêã Base Wallet Analyzer</h2>

      {!isConnected ? (
        <button
          onClick={() => connect()}
          className="bg-blue-600 px-4 py-2 rounded"
        >
          Connect Wallet
        </button>
      ) : (
        <div>
          <p><strong>Wallet:</strong> {address}</p>
          <p><strong>ETH Balance:</strong> {balance?.formatted} ETH</p>
          <p className="mt-2">Check transactions & volume in future updates!</p>
        </div>
      )}
    </div>
  )
}
